<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muda.dao.platform.cases.PlatformPlanCaseDao">

    <!--增-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into platform_plan_case(case_name,project_name,plan_name,status,author,update_time,message)
        VALUES(#{caseName},#{projectName},#{planName},#{status},#{author},#{updateTime},#{message});
    </insert>

    <!--删-->
    <delete id="delete">
        DELETE from `platform_plan_case` WHERE id = #{id}
    </delete>
    <!--删【批量】-->
    <delete id="batchRemove">
        DELETE from `platform_plan_case` WHERE id in
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>


    <!--改-->
    <update id="update">
        UPDATE `platform_plan_case`
        <set>
            <if test="caseName !=null">case_name = #{caseName},</if>
            <if test="planName !=null">plan_name = #{planName},</if>
            <if test="projectName !=null">project_name = #{projectName},</if>
            <if test="status !=null">status = #{status},</if>
            <if test="author !=null">author = #{author},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="message != null">message = #{message}</if>
        </set>
        where id = #{id}
    </update>


    <!--查-->
    <select id="get" resultType="com.muda.beans.platform.cases.PlatformPlanCase">
        select * from `platform_plan_case` where plan_name LIKE CONCAT('%',#{planName},'%')
    </select>

    <!-- 用于查询planName -->
    <select id="findByName" resultType="java.lang.String">
        SELECT case_name from platform_plan_case where `status` =1;
    </select>

</mapper>