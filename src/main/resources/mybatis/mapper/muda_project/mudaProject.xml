<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muda.dao.muda_project.MudaProjectDao">

    <!--增-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into muda_project(project_name,status,author,update_time,message)
        VALUES(#{projectName},#{status},#{author},#{updateTime},#{message});
    </insert>


    <!--删-->
    <delete id="delete">
        DELETE from `muda_project` WHERE id = #{id}
    </delete>
    <!--删【批量】-->
    <delete id="batchRemove">
        DELETE from `muda_project` WHERE id in
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>


    <!--改-->
    <update id="update">
        UPDATE `muda_project`
        <set>
            <if test="projectName !=null">project_name = #{projectName},</if>
            <if test="status !=null">status = #{status},</if>
            <if test="author !=null">author = #{author},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="message != null">message = #{message}</if>
        </set>
        where id = #{id}
    </update>


    <!--查-->
    <select id="get" resultType="com.muda.beans.muda_project.MudaProject">
        select * from `muda_project` where project_name LIKE CONCAT('%',#{projectName},'%')
    </select>

</mapper>