<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muda.dao.platform.plan.PlatformPlanDao">

    <!--增-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into platform_plan(plan_name,project_name,case_list,status,author,update_time,message)
        VALUES(#{planName},#{projectName},#{caseList},#{status},#{author},#{updateTime},#{message});
    </insert>

    <!--增 [关联测试计划]-->
    <insert id="savePlans" useGeneratedKeys="true" keyProperty="id">
        insert into platform_plan(plan_list) VALUES(#{planList}) where project_name = #{projectName};
    </insert>


    <!--删-->
    <delete id="delete">
        DELETE from `platform_plan` WHERE id = #{id}
    </delete>
    <!--删【批量】-->
    <delete id="batchRemove">
        DELETE from `platform_plan` WHERE id in
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>


    <!--改-->
    <update id="update">
        UPDATE `platform_plan`
        <set>
            <if test="planName !=null">plan_name = #{planName},</if>
            <if test="projectName !=null">project_name = #{projectName},</if>
            <if test="caseList !=null">case_list = #{caseList},</if>
            <if test="status !=null">status = #{status},</if>
            <if test="author !=null">author = #{author},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="message != null">message = #{message}</if>
        </set>
        where id = #{id}
    </update>


    <!--查-->
    <select id="get" resultType="com.muda.beans.platform.plan.PlatformPlan">
        select * from `platform_plan` where plan_name LIKE CONCAT('%',#{planName},'%')
    </select>

    <!-- 用于查询planName -->
    <select id="findByName" resultType="java.lang.String">
        SELECT plan_name from platform_plan where `status` =1;
    </select>

    <!-- 用于查询planName1 -->
    <select id="findByPlanNameLianDong" resultType="java.lang.String">
        SELECT plan_name from platform_plan where `status` =1 and project_name = #{projectName};
    </select>

</mapper>