<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muda.dao.platform.project.PlatformProjectDao">

    <!--增-->
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        insert into platform_project(project_name,status,author,update_time,message)
        VALUES(#{projectName},#{status},#{author},#{updateTime},#{message});
    </insert>

    <!--增 [关联测试计划]-->
    <insert id="savePlans" useGeneratedKeys="true" keyProperty="id">
        insert into platform_project(plans) VALUES(#{plans}) where project_name = #{projectName};
    </insert>


    <!--删-->
    <delete id="delete">
        DELETE from `platform_project` WHERE id = #{id}
    </delete>
    <!--删【批量】-->
    <delete id="batchRemove">
        DELETE from `platform_project` WHERE id in
        <foreach collection="array" item="ids" open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>


    <!--改-->
    <update id="update">
        UPDATE `platform_project`
        <set>
            <if test="projectName !=null">project_name = #{projectName},</if>
            <if test="status !=null">status = #{status},</if>
            <if test="author !=null">author = #{author},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="message != null">message = #{message}</if>
        </set>
        where id = #{id}
    </update>

    <!--改-->
    <update id="updatePlanList">
        UPDATE `platform_project`
        <set>
            <if test="plans !=null">plans = #{plans}</if>
        </set>
        where project_name = #{project_name}
    </update>


    <!--查-->
    <select id="get" resultType="com.muda.beans.platform.project.PlatformProject">
        select * from `platform_project` where project_name LIKE CONCAT('%',#{projectName},'%')
    </select>

    <!-- 用于查询caseName -->
    <select id="findByName" resultType="java.lang.String">
        SELECT project_name from platform_project where `status` =1;
    </select>

</mapper>